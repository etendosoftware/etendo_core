{
  "root": true,
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "plugins": ["prettier", "jest"],
  "extends": [
    "eslint:recommended",
    "plugin:jest/recommended",
    "plugin:jest/style",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 9
  },
  "globals": {
    "OB": "writable",
    "Backbone": "readonly",
    "_": "readonly",
    "isc": "readonly",
    "BigDecimal": "readonly"
  },
  "rules": {
    "eqeqeq": ["warn", "smart"],
    "no-unused-vars": [
      "warn",
      {
        "args": "none"
      }
    ],
    "no-console": ["warn"],
    "no-useless-escape": ["warn"]
  }
}
